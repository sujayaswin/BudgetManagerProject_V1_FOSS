<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Budget Manager"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetManagerProject">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddEntryActivity"
            android:exported="false" />

        <activity
            android:name=".CategoryManagerActivity"
            android:label="Manage Categories"
            android:exported="false" />

        <activity
            android:name=".PrivacyPolicyActivity"
            android:exported="false" />

        <!-- Add the new ChartActivity here -->
        <activity
            android:name=".ChartActivity"
            android:label="Monthly Chart"
            android:exported="false" />

    </application>
</manifest>
